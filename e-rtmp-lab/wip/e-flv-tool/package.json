{
  "name": "eflv",
  "version": "0.1.0",
  "description": "CLI tool for inspecting and merging FLV/E-FLV files",
  "type": "module",
  "bin": {
    "eflv": "dist/eflv.js"
  },
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "dump": "node dist/eflv.js dump ../assets/bbb.flv",
    "merge": "node dist/eflv.js merge <output> <input1> <input2> [input3 ...]"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  }
}
